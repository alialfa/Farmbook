@model FarmBook_v7.Models.Crop

@{
    ViewBag.Title = "Details";
}

<h2>Crop Details</h2>

<article>
    <fieldset>
        <legend>Crop</legend>

            <h3><font color="green">Name :</font></h3>
        <div class="display-field">
            @Html.DisplayFor(model =>model.CropName)
        </div>

        <div class="display-label">
            <h3><font color="green">Location :</font></h3>
        </div>
        <div class="display-field">
            @Html.DisplayFor(model =>model.CropLocation)
        </div>      

        <div class="display-label">
            <h3><font color="green">Cultivation, Care & Control :</font></h3>
        </div>
        <div class="display-field">
            @Html.DisplayTextFor(model => model.CropContent)
            </div>

        </fieldset>
    </article>

<aside>
    @Html.ActionLink("Back to Crop Selection", "CropSelection", "Crops")
    <p>
        @Html.DisplayTextFor(model => model.CropExtra)
    </p>
</aside>

        
