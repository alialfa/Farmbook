@{
    ViewBag.Title = "ChatApp";
}
    <h2><center>FarmBook Chatroom</center></h2>
    
<aside>
    <p> @Html.ActionLink("Back to Community Menu", "Index", "Community")    </p>
</aside>

<div class="container signin">
    <form class="form-horizontal">
        <div class="control-group">
            <div class="controls input-prepend">
                <span class="add-on">@@</span>
                <input type="text" id="userNameTextbox" name="userNameTextbox" placeholder="User name" />
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <button class="btn btn-primary signinButton" id="startButton" name="startButton" type="button">Start</button>
            </div>
        </div>
    </form>
</div>
<div class="container chatWindow">
    <div class="row-fluid chatGrid">
        <div class="span10 chatActivity">
            <div class="row-fluid">
                <form class="form-horizontal">
                    <div class="control-group">
                        <input type="text" placeholder="Enter text to send to the chat." name="chatMessageTextbox" id="chatMessageTextbox" />
                        <button class="btn btn-primary sendmessageButton" type="button">Send</button>
                        <button class="btn signoutButton" type="button">Signout</button>
                    </div>
                </form>
            </div>
            <div class="row-fluid chatContents">
                <div class="row-fluid chatHeader">
                    <!--
                    <div class="span1"> <b>WHO?</b> ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~<b>WHAT?</b> ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~<b>WHEN?</b> </div>
                    <div class="span1">Who?</div>
                    <div class="span7">What?</div>
                    <div class="span2">When?</div>
                    -->
                </div>
            </div>
        </div>
        <div class="span2 whoseOnlineContainer">
            <div class="caption"><b><center>Who's Online:</center></b></div>
            <div class="row-fluid usersContainer">
            </div>
        </div>
    </div>

</div>

@section scripts
{
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.1.1.min.js"></script>
    <script src="~/Scripts/App/Chat.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/SignalR/hubs"></script>
    <script>
        var chat;
        $(function () {
            chat = new Chat.ChatController();
        });
    </script>
}
